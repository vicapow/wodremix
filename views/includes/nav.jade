mixin nav(current)
  .container
    .row-fluid
      .btn-group.main-nav.pull-right
        for link, label in menu
          a.btn.btn-primary(href=link) 
            if(label === 'log')
              i.icon-pencil
            else if(label === 'stats')
              i.icon-book
            |  !{label}
        a.btn.btn-primary(href="/logout") logout
              