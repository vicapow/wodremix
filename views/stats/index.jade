//- include the layout
include ../layout
//- include the nav mixin
include ../includes/nav
//- include the workout list item partial
include ../workout/partials/pr-list
block body
  mixin nav('Stats')
  .main-container
    .main.wrapper.clearfix
      article
        header
          h1 Recent Workouts
        if(workouts.length)
          each workout in workouts
            a(href="/wod/" + workout.hash)
              section.clearfix
                if workout.date
                  span.muted.pull-right
                    i.icon.icon-calendar
                    |  !{moment(workout.date).fromNow()}
                h2 !{workout.label}
                p !{workout.description}
        else
          p No workouts logged yet. Click the 'log' link above to log a workout.
