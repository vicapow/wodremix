//- include the layout
include ../layout
//- include the nav mixin
include ../includes/nav
//- include the workout list item partial
include ../workout/partials/task
include ../workout/partials/pr-list
block body
  mixin nav('movements')
  .main-container
    .main.wrapper.clearfix
      article
        header
          h1 !{movement.label}
        if(movement.videoId)
          section.clearfix
              iframe(width="100%", height="200", src="http://www.youtube.com/embed/" + movement.videoId + "?html5=1&showinfo=0", frameborder="0", allowfullscreen)
              .clear
      article
        header
          h1 PRs
        if(records.length)
          for record in records
            - record = record.value
            a.record(href="/wod/" + record.hash)
              section.clearfix
                mixin task(record)
        else
          section.clearfix.muted
            p No 
              i !{movement.label} 
              | PRs logged yet.
      article
        header
          h1 Workouts
        if(workouts.length)
          each workout in workouts
            a.workout(href="/wod/" + workout.hash)
              section.clearfix
                if workout.date
                  span.muted.pull-right
                    i.icon.icon-calendar
                    |  !{moment(workout.date).fromNow()}
                span !{workout.label}
                p !{workout.description}
        else
          section.clearfix
            p No !{movement.label} workouts logged yet.
      br
      br