.metric(class=name)
  label(for=name) !{name}
  if(name === 'direction')
    select.input-small
      option(value="forward") forward
      option(value="backward") backward
  else
    .input-append
      input.metric-value.input-mini(name=name, type="number", min="1", max="1000", value=value)
      if(units)
        .btn-group
          button.btn.units !{units}
          select.units.metric-units(data-metric=name, style="opacity:0;width:0px;height:0px;position:absolute")
            // - NOTE: style tag
            for unit in units
              option(value=unit, selected = units === unit ? 'select' : null) !{unit}

